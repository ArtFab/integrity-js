{
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "ES2015",
    "module": "ES2020",
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist/esm",
    "alwaysStrict": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "obj",
    "bin",
    "./dist/**/*",
  ],
  "include": [ "src/ts" ]

}
